---
const { title, track } = Astro.props;
const og = Object.assign({}, Astro.props.og, {
  title: title,
  image: `${import.meta.env.PUBLIC_CF_IMAGE_URL}${track.data.img}/1024x1024`,
  site_name: "spitofy",
  type: "website",
});
---

<meta property="og:title" content={og.title} />
<meta property="og:image" content={og.image} />
<meta property="og:site_name" content={og.site_name} />

{
  og.type === "music" ? (
    <>
      <meta property="og:type" content="music" />
      <meta property="og:musicial" content="spitofy" />
      <meta property="audio:type" content="audio/mp3" />
      <meta property="og:audio" content={track.data.mp3} />
      <meta property="music:release_date" content={track.data.date} />
    </>
  ) : (
    <meta property="og:type" content="website" />
  )
}
