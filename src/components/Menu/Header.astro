---
import SubMenu from "./SubMenu/SubMenu.astro";
import Cart from "./Cart/Cart.astro";
import FullScreen from "./FullScreen/FullScreen.astro";

const title = Astro.props.title;
---

<header>
  <div class="left">
    <FullScreen />
  </div>
  <h1>{title}</h1>
  <div class="right">
    <Cart />
    <SubMenu />
  </div>
</header>

<style lang="scss">
  header {
    background: #0006;
    backdrop-filter: hue-rotate(180deg) contrast(13) blur(10px);
    box-shadow: 0 0 10px 10px rgba(0, 0, 0, 0.151);
    z-index: 10;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    margin-top: 0;
    transition: top var(--quarter-note) ease-out;
  }
  div {
    position: absolute;
    display: flex;
    column-gap: 10px;
    &.right {
      top: 10px;
      right: 10px;
    }
    &.left {
      left: 0;
      top: 0;
    }
  }

  body.playing header {
    top: -75px;
    opacity: 0.5;
  }
  body.playing header:hover,
  body.playing header:focus-within,
  body.userRecentAction.playing header {
    top: 0;
    opacity: 1;
  }

  h1 {
    color: white;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 30px;
    font-weight: 100;
    letter-spacing: 5px;
    @media (max-width: 500px) {
      font-size: 25px;
    }
    @media (max-width: 400px) {
      font-size: 20px;
    }
  }
</style>
