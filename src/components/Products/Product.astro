---
const { image, name, price, slug, sizes, from, to, stock } = Astro.props;
---

<div class="product" data-slug={slug}>
  <div class="dates">
    <span class="dateTs" data-date={from}>{from}</span> - <span
      class="dateTs"
      data-date={to}>{to}</span
    >
    <br />
    <span> Stock:</span>
    <span>{stock}</span>
  </div>
  <img
    class="Track__img"
    src={`${import.meta.env.PUBLIC_CF_IMAGE_URL}${image}/350x350`}
    srcset={`${import.meta.env.PUBLIC_CF_IMAGE_URL}${image}/350x350 x1, ${
      import.meta.env.PUBLIC_CF_IMAGE_URL
    }${image}/700x700 x2`}
    alt={name ?? "product image"}
  />
  <h2>{name}</h2>
  <script>
    document.querySelectorAll(".dateTs").forEach((el: HTMLSpanElement) => {
      const date = new Date(el.dataset.date as string).toLocaleDateString(
        undefined,
        {
          year: "numeric",
          month: "2-digit",
          day: "2-digit",
        },
      );
      el.innerText = date;
    });
  </script>

  <span class="price">${(price / 100).toString().padEnd(2, "0")}â‚¬</span>
  <span class="problem outOfStock">Out of stock</span>
  <span class="problem waitForIt"
    >Sells starts at <span class="dateTs" data-date={from}>{from}</span></span
  >
  <span class="problem expired"
    >Sells ended at <span class="dateTs" data-date={to}>{to}</span></span
  >
  <button aria-label="add To Cart"> Add to cart</button>
  {
    sizes && (
      <div class="sizes">
        {sizes.map((size) => (
          <label>
            <input
              type="radio"
              name="size"
              value={size}
              checked={size === "M"}
            />
            <span>{size}</span>
          </label>
        ))}
      </div>
    )
  }
</div>

<style lang="scss">
  .product {
    position: relative;

    img {
      width: 100%;
      height: auto;
      max-width: 100%;
      display: block;
      margin: 0;
      padding: 0;
    }

    h2 {
      color: white;
      margin-bottom: 0;
    }
    .dates {
      margin-top: 10px;
      color: #fff8;
    }

    .price {
      color: black;
      background: white;
      padding: 10px 20px;
      transform: rotate(30deg);
      position: absolute;
      font-weight: 900;
      box-shadow: 0 0 25px -5px #0008;
      top: 15%;
      right: 15%;
      opacity: 0;
      transition: opacity 0.5s;
    }

    &:hover {
      background: #0008;
      backdrop-filter: hue-rotate(180deg) contrast(13) blur(10px);

      span {
        opacity: 1;
      }
      button {
        opacity: 1;
      }
      .sizes {
        opacity: 1;
      }

      .dates {
        color: #fff;
      }
    }
    button {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: #0008;
      color: white;
      padding: 10px 20px;
      border: none;
      font-weight: 900;
      font-size: 20px;
      box-shadow: 0 0 25px -5px #0008;
      opacity: 0;
      transition: opacity 0.5s;
      cursor: url(/hand.webp), pointer;

      &:hover {
        background: black;
      }
    }
    .problem {
      display: none;
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(255, 0, 0, 0.742);
      color: white;
      padding: 10px 20px;
      border: none;
      font-weight: 900;
      font-size: 40px;
      box-shadow: 0 0 25px -5px #0008;
      opacity: 0;
      transition: opacity 0.5s;
    }

    .sizes {
      margin-top: 10px;
      color: white;
      opacity: 0;
      transition: opacity 0.5s;
      display: flex;
      justify-content: center;
      input {
        display: none;
      }
      label {
        display: flex;
        align-items: center;
        justify-content: center;
        span {
          cursor: url(/hand.webp), pointer;
          display: block;
          width: 30px;
          text-align: center;
          padding: 5px;
        }
        span:hover {
          font-weight: 900;
        }
        input[type="radio"]:checked + span {
          background: white;
          color: black;
        }
      }
    }
  }
</style>
