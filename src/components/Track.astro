---
import { Picture } from "astro:assets";
const {
    img,
    mp3,
    title,
    slug
} = Astro.props;
---
<a href={`/track/${slug}`} data-audio={mp3}>
    <Picture alt={title} src={img} alt={title} width={75} height={75}/>
</a>

<style>
    a {
        display: flex;
        gap: 10px;
        flex-direction: column;
        backdrop-filter: hue-rotate(180deg) contrast(13) blur(10px);
        background-color: #0008;
        color: white;
        align-items: center;
        cursor: url(/hand.webp) ,pointer;
    }
    img {
        width: 350px;
        height: auto;
        max-width: 100%;
        display: block;
        margin: 0;
        padding: 0;
    }
</style>