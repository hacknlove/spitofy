---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Menu/Header.astro";
import Footer from "@/components/Menu/Footer.astro";
import Title from "@/components/Title.astro";
import Playlist from "@/components/Playlist.astro";
import Toast from "@/components/Toast.astro";
import LegalStuff from "@/components/LegalStuff.astro";
---

<Layout
  title="Spitofy. Oficial website."
  og={{
    type: "website",
    description: "Spitofy. Oficial website. Punk Electro, Techno, and Dance.",
  }}
  ssr={{
    d1: [
      {
        name: "statistics",
        database: "Spitofy_Statistics",
        query: "SELECT slug as id, plays, reactions FROM tracks",
      },
    ],
  }}
>
  <Header title="Spitofy" />
  <Title title="Tracks" />
  <Playlist />

  <Title title="Tour" />
  <Toast text="There are no upcoming events." />

  <LegalStuff />
  <Footer />
</Layout>
