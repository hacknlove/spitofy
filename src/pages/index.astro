---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Menu/Header.astro";
import Footer from "@/components/Menu/Footer.astro";
import Title from "@/components/Title.astro";
import Playlist from "@/components/Playlist.astro";
import Products from "@/components/Products/Products.astro";
import Toast from "@/components/Toast.astro";
import LegalStuff from "@/components/LegalStuff.astro";
---

<Layout
  title="Spitofy. Oficial website."
  og={{
    type: "website",
    description: "Spitofy. Oficial website. Punk Electro, Techno, and Dance.",
  }}
>
  <Header title="Spitofy" />
  <Title title="Tracks" />
  <Playlist />

  <Title title="Shop" />
  <Toast>
    <h3>Top Quality.</h3>
    <p>
      All products are premium and high quality, because It's my reputation
      which it's at stake.
    </p>
    <h3>Limited Time, Limited Stock.</h3>
    <p>
      We only sell units of each product. And products are only available for 1
      month.
    </p>
  </Toast>
  <Products />

  <Title title="Tour" />
  <Toast text="There are no upcoming events." />

  <LegalStuff />
  <Footer />
</Layout>
